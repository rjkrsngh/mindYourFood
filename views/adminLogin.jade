extends adminLayout

block content
  div(class='nav-bar')
    a(class='logo', href='/')
      b mindYourFood

  form(id='adminLoginForm', action="/admin/home", method="POST")
    label(for='username')
      b username
    input(type="text", class="username", name="username")
    label(for='password')
      b password
    input(type="password", class="password", name="password")
    input(type="submit", value="login", class="login")